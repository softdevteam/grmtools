name: Test string value type instead of array in %grmtools{test_files}
grammar: |
    %grmtools {
        yacckind: Original(YaccOriginalActionKind::UserAction),
        recoverer: RecoveryKind::None,
        test_files: "should_be_an_array"
    }
    %start Expr
    %actiontype ()
    %%
    Expr: '(' ')' { () } ;
lexer: |
    %%
    \( "("
    \) ")"
    [\t\n ]+ ;
